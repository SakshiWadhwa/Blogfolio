<!DOCTYPE html>
<html>
<head>
	<title>Blogfolio</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


	<link rel="stylesheet" href="/static/css/main.css">
	<link rel="stylesheet" href="/static/css/blog.css">

	<script type="text/javascript">
		if(!!window.performance && window.performance.navigation.type === 2){
			window.location.reload();
		}	
	</script>

</head>
<%- include navbar %>

	<div class="container-fluid col-md-12">
		<img src="/static/banner.png" class="img-responsive">
		<div class="text-center gallery_heading">
			<h2>Blog Portfolio</h2>
		</div>
	</div>

	<div class=" container-fluid blogs">
		<div class="col-md-1"></div>
		<div class="col-md-5 ">
			<% for(var i=0; i< blog_post_data.length; i = i + 2) 
			{  %>
				<a href="/blog_page_link/<%= blog_post_data[i].blog_title %>/<%= blog_post_data[i].blog_id %>">
					<div class="blog_heading"><h2 class="text-center"><%= blog_post_data[i].blog_title %></h2></div>
				</a>
				<div class="col-md-6 blog_date">
					<h4><%= blog_post_data[i].blog_date %></h4>
				</div>
				<div class="col-md-6 blog_author">
					<h4>By <%= blog_post_data[i].blog_author %></h4>
				</div>
				<img src="../../.<%= blog_post_data[i].blog_img %>" class="img-responsive">

			<% } %>
		</div>

		<div class="col-md-5 ">
			<% for(var i=1; i< blog_post_data.length; i = i + 2) 
			{  %>
				<a href="/blog_page_link/<%= blog_post_data[i].blog_title %>/<%= blog_post_data[i].blog_id %>">
					<div class="text-center blog_heading"><h2><%= blog_post_data[i].blog_title %></h2></div>
				</a>
				<div class="col-md-6 blog_date">
					<h4><%= blog_post_data[i].blog_date %></h4>
				</div>
				<div class="col-md-6 blog_author">
					<h4>By <%= blog_post_data[i].blog_author %></h4>
				</div>
				<img src="../../.<%= blog_post_data[i].blog_img %>" class="img-responsive">

			<% } %>
		</div>
		<div class="col-md-1"></div>
	</div>
